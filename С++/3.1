#include <iostream>
#include <iomanip>

using namespace std;

int main()
{
    setlocale(LC_ALL,"Rus");

    double conversionFactor = 1e5;
    int Fk;

    cout << "Введите конечное значение силы в Ньютонах: ";
    cin >> Fk;

    int count = 0;

    cout << "________________________________" << endl;
    cout << "|  Ньютоны |         Дины         |" << endl;
    cout << "________________________________" << endl;

    cout << setw(10) << "Ньютоны" << setw(20) << "Дины" << endl;
    for (int i = 1; i <= Fk; i += 2)
    {
        double dynes = i * conversionFactor;
        cout << "| " << setw(8) << i << " | " << setw(20) << dynes << " |" << endl;
        cout << "________________________________" << endl;
        count++;
    }

    cout << "Количество строк в таблице: " << count << endl;

    return 0;
}
