using System;

class fraction
{
    private float numerator;
    private float denominator;

    public fraction()
    {
        numerator = 0; 
        denominator = 1;
    }

    public fraction(float num, float denom)
    {
        if (denom == 0)
        {
            throw new ArgumentException("Знаменатель не может равняться нулю!");
        }
        numerator = num;
        denominator = denom;
    }

    public void Print()
    {
        Console.WriteLine($"{numerator}/{denominator}");
    }
    public static fraction Add(fraction f1, fraction f2)
    {
        float CommonDenominator = f1.denominator * f2.denominator;
        float newNumerator = f1.numerator + f2.numerator * f1.denominator;
        return new fraction(newNumerator, CommonDenominator);
    }

}



class Program
{
    static void Main()
    {
        System.Globalization.CultureInfo.CurrentCulture = new System.Globalization.CultureInfo("ru-RU");

        fraction f1 = new fraction(3, 4);
        fraction f2 = new fraction(2, 3);

        fraction result = fraction.Add(f1, f2);

        Console.WriteLine("Первая дробь: ");
        f1.Print();
        Console.WriteLine("Вторая дробь: ");
        f2.Print();
        Console.WriteLine("Результат сложения: ");
        result.Print();
    }
}
