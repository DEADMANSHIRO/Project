using System;

class Program
{
    static void Main()
    {
        double conversionFactor = 1e5; 
        int Fk;

        Console.WriteLine("Введите конечное значение силы в Ньютонах: ");
        while (!int.TryParse(Console.ReadLine(), out Fk) || Fk <= 0)
        {
            Console.WriteLine("Неверный ввод. Пожалуйста, введите положительное целое число.");
        }

        int count = 0;

        Console.WriteLine("________________________________");
        Console.WriteLine("|  Ньютоны |         Дины         |");
        Console.WriteLine("________________________________");

        for (int i = 1; i <= Fk; i += 2)
        {
            double dynes = i * conversionFactor;
            Console.WriteLine($"| {i,8} | {dynes,20} |");
            Console.WriteLine("________________________________");
            count++;
        }

        Console.WriteLine("Количество строк в таблице: " + count);
    }
}
